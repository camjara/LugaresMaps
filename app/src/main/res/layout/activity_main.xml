<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <include
       android:id="@+id/activityActionBar"
       layout="@layout/action_bar">

   </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/miActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <ImageView
                android:id="@+id/ivImagen1"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:src="@mipmap/catedral"
                android:layout_weight="1"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/ivImagen2"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:src="@mipmap/fundadores"
                android:layout_weight="1"
                android:padding="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/ivImagen3"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:src="@mipmap/cable"
                android:layout_weight="1"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/ivImagen4"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:src="@mipmap/torre"
                android:layout_weight="1"
                android:padding="8dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>